#!/bin/sh
if [ -z "${DNS_CLUSTER_QUERY}" -o -z "${ECS_CONTAINER_METADATA_URI_V4}" ]; then
  export RELEASE_DISTRIBUTION=sname
  export RELEASE_NODE=ride-along
else
  dns_name=$(curl -s "$ECS_CONTAINER_METADATA_URI_V4" | jq -r '.Networks[0].PrivateDNSName')
  export RELEASE_DISTRIBUTION=name
  export RELEASE_NODE="ride-along@$dns_name"
fi

echo "Release Distribution: $RELEASE_DISTRIBUTION"
echo "Release Node: $RELEASE_NODE"
